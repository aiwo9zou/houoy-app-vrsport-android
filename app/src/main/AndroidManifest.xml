<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gov.smart.health">

    <!-- 使用opengles 2.0 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 允许访问存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@mipmap/healthicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:windowSoftInputMode="adjustUnspecified|stateHidden">
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.login.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity
            android:name=".activity.login.RegisterActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.find.LearningActivity" />
        <activity android:name=".activity.find.EventActivity" />
        <activity android:name=".activity.find.DetailActivity" />
        <activity android:name=".activity.self.UserSettingActivity" />
        <activity android:name=".activity.self.UserSettingInfoActivity" />
        <activity android:name=".activity.self.SportHistoryListActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d31bd770eb37b494636da1fa59c63570efd684df" />

        <activity android:name=".activity.message.MessageActivity" />
        <activity
            android:name=".activity.login.ResetPwdActivity"
            android:configChanges="orientation|keyboardHidden"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".activity.vr.ShareActivity" />
        <activity android:name=".activity.message.FriendsActivity" />
        <activity android:name=".activity.message.FriendInfoActivity" />
        <activity android:name=".activity.message.NearlyActivity" />
        <activity android:name=".activity.vr.BlueToothActivity" />
        <activity android:name=".activity.vr.DeviceListActivity" />
        <activity
            android:name=".activity.vr.SelectParkActivity"
            android:label="@string/title_activity_select_park"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.message.AddFriendActivity" />
        <activity android:name=".activity.self.DeviceSettingActivity" />
        <activity android:name=".activity.vr.VTOVRPlayerActivity" />
        <activity android:name=".activity.vr.SportAreaActivity"></activity>
    </application>

</manifest>